<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/confirm_color</item>

    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_transition_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_transition_slide_out</item>
    </style>
    
    <style name="DialogSlideAnimation" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>
</resources>
